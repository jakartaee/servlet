<web-app xmlns="https://jakarta.ee/xml/ns/jakartaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         version="5.0"
         xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_5_0.xsd" metadata-complete="false">
    <display-name>SerSpecFragment</display-name>
    <filter>
        <filter-name>TestFilter</filter-name>
        <filter-class>com.sun.ts.tests.servlet.pluggability.fragment.TestFilter</filter-class>
        <init-param>
            <param-name>fragment</param-name>
            <param-value>none</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>TestFilter</filter-name>
        <servlet-name>TestServlet5</servlet-name>
    </filter-mapping>
    <servlet>
        <servlet-name>TestServlet1</servlet-name>
        <servlet-class>com.sun.ts.tests.servlet.pluggability.fragment.TestServlet1</servlet-class>
        <init-param>
            <param-name>msg1</param-name>
            <param-value>first</param-value>
        </init-param>
        <init-param>
            <param-name>msg1</param-name>
            <param-value>ignore</param-value>
        </init-param>
    </servlet>
    <servlet>
        <servlet-name>TestServlet2</servlet-name>
        <servlet-class>com.sun.ts.tests.servlet.pluggability.fragment.TestServlet2</servlet-class>
        <init-param>
            <param-name>msg1</param-name>
            <param-value>second</param-value>
        </init-param>
    </servlet>
    <servlet-mapping>
        <servlet-name>TestServlet1</servlet-name>
        <url-pattern>/TestServlet1</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>TestServlet2</servlet-name>
        <url-pattern>/TestServlet2</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>54</session-timeout>
    </session-config>
</web-app>
